@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
@*üstteki iki satır olmazsa writerlayout alınmaz*@
<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    @* kenarlıklı bir tablo oluşturdum*@

    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>




    </tr>



    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogId</th>
            <td>@item.BlogTitle</td>
            <td>@item.BlogCreateDate</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogStatus</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-warning">Düzenle</a></td>
           




        </tr>

    }



</table>

<a href="#" class="btn btn-primary">Yeni Blog Oluştur</a> @* burdaki href=# işareti tıklanabildiğini gösteriyor*@