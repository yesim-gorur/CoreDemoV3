@model EntityLayer.Concrete.Blog 
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Blog Düzenleme Sayfası</h1>
@using(Html.BeginForm("EditBlog","Blog",FormMethod.Post))  @*birincisi actionumun adı ikincisi controlerım üçüncüsü ise from post method*@
{
    @Html.Label("BlogId")
    @Html.TextBoxFor(x=>x.BlogId,new {@class="form-control"})
    <br />
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x=>x.BlogTitle,new{@class="form-control"})
    <br />
    @Html.Label("Blog ThumbnailUrl")
    @Html.TextBoxFor(x=>x.BlogThumbnailImage,new{@class="form-control"})
    <br />
    @Html.Label("Blog Kategori") @*burası dropdown olacak*@
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.cv,new {@class="form-control"})
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x=>x.BlogContent,10,3,new{@class="form-control"})
    <br />
    <button class="btn btn-success">Güncelle</button>  @*burdaki buton tıklanınca post oldugu için sayfa kaydetme sağlanacaktır*@





}
